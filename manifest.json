{
  "manifest_version": 3,
  "name": "echo",
  "version": "0.1.5",
  "description": "Capture network logs, console messages, and screenshots for comprehensive bug reports",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "webRequest",
    "tabs",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/network.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/console.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}
